<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/name_calling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/status_calling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calling"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/calling_image"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/minon_hitman"/>

    <LinearLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <ImageView
        android:id="@+id/volumeCalling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/volume_icon"
        android:background="@color/colorPrimary"
        android:layout_weight="1"
        android:padding="20dp"
        android:clickable="true"/>

        <ImageView
            android:id="@+id/call_end_calling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/call_end_icon"
            android:background="#FF0000"
            android:layout_weight="1"
            android:padding="20dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/call_receive_calling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon_two"
            android:background="#00FF00"
            android:layout_weight="1"
            android:padding="20dp"
            android:clickable="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/mic_calling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mic_icon"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:padding="20dp"
            android:clickable="true"/>

    </LinearLayout>


</RelativeLayout>